    <div class="modal hide fade" id="invite-friends-list">
      <div class="modal-header">
	    <a class="close" data-dismiss="modal">x</a>
	    <h3>招待する友達を選択してください</h3>
      </div>
      <div class="modal-body">
        <table class="table table-condensed">
          <tbody id="friends-table">
          </tbody>
        </table>
      </div>
      <div class="modal-footer">
	    <a href="#" class="btn" data-dismiss="modal">キャンセル</a>
	    <a id="friend-select-btn" href="#" class="btn btn-warning">選択</a>
	  </div>
    </div>
    
    <div class="modal hide fade" id="confirm-event">
      <div class="modal-header">
	    <a class="close" data-dismiss="modal">x</a>
	    <h3>イベント情報の確認</h3>
      </div>
      <div class="modal-body">
      	<dl>
          <dt>タイトル</dt>
		  <dd id="ctitle"></dd>
		  <dt>日程</dt>
		  <dd><input type="hidden" id="cdate-val"/><span id="cdate"></span></dd>
		  <dt>場所</dt>
		  <dd><input type="hidden" id="cpref-val"/><span id="cpref"></span> <input type="hidden" id="ctrain-val"/><span id="ctrain"></span> <input type="hidden" id="cstation-val"/><span id="cstation"></span></dd>
		  <dt>ジャンル</dt>
		  <dd><input type="hidden" id="ccategory-val"/><span id="ccategory"></span></dd>
		  <dt>店</dt>
		  <dd id="crestaurant"></dd>
		  <dt>最大人数</dt>
		  <dd id="cmax"></dd>
		  <dt>締め切り</dt>
		  <dd><input type="hidden" id="cdeadline-val" /><span id="cdeadline"></span></dd>
		  <dt>コメント</dt>
		  <dd id="ccomment"></dd>
		</dl>
		<label class="radio inline">
			<input type="radio" name="check-radio" id="check-private" value="private" checked>友人のみ公開
		</label>
		<label class="radio inline">
			<input type="radio" name="check-radio" id="check-public" value="public">全てのユーザに公開
		</label>
      </div>
      <div class="modal-footer">
	    <a href="#" class="btn" data-dismiss="modal">編集</a>
	    <a href="#" class="btn btn-primary" id="commit-event-btn">作成</a>
	  </div>
	</div>
	        
