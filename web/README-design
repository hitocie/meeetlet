
[ Top page ]
  [Development] http://localhost:3000/auths
  
[ DTO / Database entities]
 User
   *id :int
   -uid :String(userid)
   -name :String(username)
   -token :String (if logged in.)
   
 Event
   *id :int
   -title :String
   -date :Datetime
   -city :String
   -station :String
   -budget :String
   -genre :String(?)
   -shop :String
   -comment :String
   -maxNumber :int
   -deadline :Datetime
   -closed :bool
   -canceled :bool
   -privateOnly :bool
   -[owner :User(ownerRef)]
   -[preEvent :PreEvent(preEventRef)]

 PreEvent
   *id :int
   -dates :Array<Datetime> (e.g. 11/23, 11/24, 11/25)
   -cities :Array<String> (e.g. Boston, NY, LA)
   -stations :Array<String>
   -budgets :Array<String> (e.g. 1000-2000, 2000-3000, 3000-4000)
   -genres :Array<String> (e.g. Japanese, Chinese, Western)
   -shops :Array<String> (e.g. A, B, C)
 
 Response(enum)
   - OK(0), NG(1), Pending(2)

 Participant
   *id :int
   -event :(eventRef --> Event)
   -user :(userRef --> User)
   -attend :Response
   -comment :String
   -preParticipant :(preParticipantRef --> PreParticipant)

 PreParticipant
   *id :int
   -dates :Array<Response>
   -cities :Array<Response>
   -stations :Array<Response>
   -budgets :Array<Response>
   -genres :Array<Response>
   -shops :Array<Response>
   -comment :String
   
 Prefecture
   *id :int
   -code :String
   -name :String
   -yomi :String
   
 City
   *id :int
   -name :String
   -yomi :String
   -[prefecture --> Prefecture]

 Train (=Line)
   -id :int
   -name :String
   -[prefecture --> Prefecture]
   
 Station
   -id :int
   -name :String
   -yomi :String
   -[train --> Train]
   -lat :float
   -lng :float


